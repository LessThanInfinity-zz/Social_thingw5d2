<h1>Sign In!</h1>

<form action="<%= session_url %>" method="post" accept-charset="utf-8">
	<input type="hidden"
				 name="authenticity_token"
				 value="<%= form_authenticity_token %>">

	<label for="user_username">Name</label>
	<input type="text"
				 name="user[username]"
				 value="<%= @user.username %>"
				 id="user_username">

 	<label for="user_password">Password</label>
 	<input type="password"
 				 name="user[password]"
 				 id="user_password">

	<p><input type="submit" value="Sign in"></p>
</form>